{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "db:migrate": "cd ../../packages/db && bun run db:migrate",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run db:migrate && bun run dist/index.mjs"
  },
  "dependencies": {
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@solana-stack-attack/analytics": "workspace:*",
    "@solana-stack-attack/api": "workspace:*",
    "@solana-stack-attack/auth": "workspace:*",
    "@solana-stack-attack/db": "workspace:*",
    "@solana-stack-attack/env": "workspace:*",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "^0.45.1",
    "hono": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@solana-stack-attack/config": "workspace:*",
    "@types/bun": "catalog:",
    "tsdown": "^0.16.5",
    "typescript": "catalog:"
  }
}
